{
  "name": "sqlite-recovery-tool",
  "version": "1.0.0",
  "description": "Web-based SQLite database recovery tool with GUI interface",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "docker:build": "docker build -t sqlite-recovery .",
    "docker:run": "docker run -p 5000:5000 sqlite-recovery",
    "docker:compose": "docker-compose up --build",
    "test:health": "curl -f http://localhost:5000/api/health || exit 1"
  },
  "keywords": [
    "sqlite",
    "database",
    "recovery",
    "corrupt",
    "web",
    "gui"
  ],
  "author": "SQLite Recovery Tool",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "adm-zip": "^0.5.10"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
